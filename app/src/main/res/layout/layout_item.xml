<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/suksis_logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/suksis_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/Widget.Material3.CircularProgressIndicator"
                android:elevation="2dp"/>

            <TextView
                android:id="@+id/feed_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="SUKSIS UM"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/suksis_logo"
                app:layout_constraintTop_toTopOf="@+id/suksis_logo" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/feed_username"
                app:layout_constraintTop_toBottomOf="@+id/feed_username" />

            <TextView
                android:id="@+id/feed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Title"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/suksis_logo"
                app:layout_constraintTop_toBottomOf="@+id/suksis_logo" />

            <TextView
                android:id="@+id/TV_feed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Date:"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/feed_title"
                app:layout_constraintTop_toBottomOf="@+id/feed_title" />

            <TextView
                android:id="@+id/feed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Date"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/TV_feed_date"
                app:layout_constraintTop_toTopOf="@+id/TV_feed_date" />

            <TextView
                android:id="@+id/TV_feed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Time:"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/TV_feed_date"
                app:layout_constraintTop_toBottomOf="@+id/TV_feed_date" />

            <TextView
                android:id="@+id/feed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Time"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/TV_feed_time"
                app:layout_constraintTop_toTopOf="@+id/TV_feed_time" />

            <TextView
                android:id="@+id/TV_feed_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Notes:"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/TV_feed_time"
                app:layout_constraintTop_toBottomOf="@+id/TV_feed_time" />

            <TextView
                android:id="@+id/feed_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Note"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/TV_feed_note"
                app:layout_constraintTop_toBottomOf="@+id/TV_feed_note" />

            <TextView
                android:id="@+id/txt_option"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>