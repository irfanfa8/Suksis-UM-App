<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="15dp">

    <TextView
        android:text="Fullname"
        android:textSize="16sp"
        android:id="@+id/textViewFullnameAtt"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:text="24/2/22"
        android:textSize="16sp"
        android:id="@+id/textViewDateAtt"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textViewFullnameAtt"
        app:layout_constraintTop_toBottomOf="@+id/textViewFullnameAtt"/>

    <TextView
        android:text="24/2/22"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:id="@+id/textViewCurrentDateAtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewFullnameAtt"/>


</androidx.constraintlayout.widget.ConstraintLayout>